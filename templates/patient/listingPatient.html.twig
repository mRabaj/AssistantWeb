
{% extends 'base.html.twig' %}

{% block webTitle %}  {% trans %} listing Patients {% endtrans %} {% endblock %}

         

        {% block h2 %}
            {% trans %} Patient listing {% endtrans %}
        {% endblock %}

        {% block contentListing %} 
                      
                <div class="table-responsive">
                    <table id="example" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nom</th>
                                <th>Prénom</th>
                                <th>Age</th>
                                <th>Ville</th>
                                <th>Téléphone</th>
                                <th></th>                                
                            </tr>
                        </thead>
                        <tbody>
                            {% if patients is defined %}
                                {% for patient in patients %}
                                    <tr>
                                    <th scope="row">{{ patient.idpatient }}</th>
                                    <td>{{ patient.lastName }}</td>
                                    <td>{{ patient.firstName }}</td>
                                    <td>{{ patient.birthDate|date('d/m/Y') }}</td>
                                    <td>{{ patient.city }}</td>
                                    <td>{{ patient.phonenumber }}</td>
                                    <td> <a href="{{ path('patient_edit',{'id': patient.idpatient}) }}" class="btn btn-primary btn-lg " tabindex="-1" role="button" aria-disabled="true">Edit</a></td>
                                
                                    </tr>
                                {% endfor %}
                            {% endif %}
                        </tbody>            
                    </table>
                </div>     
               
            
        {% endblock %}  



    
            